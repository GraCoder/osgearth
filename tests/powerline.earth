<map name="power tower test">

    <PowerlineModel name="towers" max_range="6000" attenuation_range="1000">
        <features>power-lines</features>
        <filters>
            <script>feature.properties.power === 'line' || feature.properties.power === 'tower';
            </script>
        </filters>
        <tower_model>
            <uri>../data/power_tower.osgb</uri>
            <attachment_points>
                LINESTRING(6.400827 -0.031 26.068, -6.3926 -0.039 26.068, 3.981 -0.01 29.88, -3.854 0.39 29.89, 6.385 0.0 21.077, -6.35 -0.01 21.077)
            </attachment_points>
            <max_sag>5.0</max_sag>
        </tower_model>
        <styles>
            <style type="text/css">
                cables {
                    stroke: #080808;
                    stroke-width: 0.05m;
                }
            </style>
        </styles>
    </PowerlineModel>
    
    <TiledFeatureModel name="power schematics" pickable="true" open="false">
        <features>power-lines</features>
        <styles>
            <style type="text/css">
                lines {
                    select: feature.properties.power === 'line';
                    altitude-clamping: terrain;
                    altitude-offset: 10;
                    stroke: #ff0000;
                    stroke-width: 3px;
                }
                towers {
                    select: feature.properties.power === 'tower';
                    altitude-clamping: terrain;
                    altitude-offset: 10;
                    point-fill: #00ff00;
                    point-size: 20px;
                    point-smooth: true;
                }
            </style>
        </styles>
    </TiledFeatureModel>

    <XYZFeatures name="power-lines">
        <url>https://readymap.org/readymap/mbtiles/osm/{z}/{x}/{-y}.pbf</url>
        <min_level>14</min_level>
        <max_level>14</max_level>
        <profile>spherical-mercator</profile>
        <format>pbf</format>
        <fid_attribute>@id</fid_attribute>
        <filters>
            <script>
                'power' in feature.properties;
            </script>
        </filters>
    </XYZFeatures>

